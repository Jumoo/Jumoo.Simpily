@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "SimpilyAuth.cshtml";
}

@{
    var resetGuid = Request.QueryString["resetGUID"];

    if (string.IsNullOrWhiteSpace(resetGuid))
    {
        @Html.Action("RenderForgotPassword", "SimpilyAuthSurface")
    }
    else
    {
        @Html.Action("RenderResetPassword", "SimpilyAuthSurface")
    }
}